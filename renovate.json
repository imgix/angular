{
  "extends": ["config:js-lib"],
  "automerge": false,
  "patch": {
    "automerge": true
  },
  "devDependencies": {
    "automerge": true
  },
  "packageRules": [
    {
      "packagePatterns": [
        "^@angular/",
        "^zone.js$",
        "^@angular-devkit/",
        "^jasmine",
        "karma",
        "ng-packgr",
        "protractor",
        "tslint",
        "typescript"
      ],
      "updateTypes": ["major"],
      "enabled": false
    },
    {
      "depTypeList": ["dependencies", "peerDependencies"],
      "semanticCommitScope": "deps"
    },
    {
      "depTypeList": ["devDependencies"],
      "semanticCommitScope": "dev-deps"
    }
  ]
}
