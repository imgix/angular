{
  "extends": ["github>imgix/renovate-config"],
  "packageRules": [
    {
      "packagePatterns": [
        "^@angular/",
        "^zone.js$",
        "^@angular-devkit/",
        "^jasmine",
        "karma",
        "ng-packgr",
        "protractor",
        "tslint",
        "typescript"
      ],
      "updateTypes": ["major"],
      "enabled": false
    },
    {
      "packagePatterns": ["typescript"],
      "updateTypes": ["major", "minor"],
      "enabled": false
    }
  ]
}
